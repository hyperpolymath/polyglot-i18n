{
  "name": "polyglot-i18n",
  "description": "Polyglot i18n - ReScript-first, WASM-accelerated translation module with dynamic JSON storage",
  "version": "0.16.0",
  "homepage": "https://github.com/hyperpolymath/polyglot-i18n",
  "repository": {
    "type": "git",
    "url": "https://github.com/hyperpolymath/polyglot-i18n.git"
  },
  "author": "hyperpolymath",
  "contributors": [
    {
      "name": "Marcus Spiegel",
      "email": "marcus.spiegel@gmail.com",
      "url": "https://github.com/mashpie"
    }
  ],
  "main": "./index",
  "types": "./index.d.ts",
  "exports": {
    ".": {
      "import": "./index.mjs",
      "require": "./index.js",
      "types": "./index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "i18n.js",
    "index.js",
    "index.mjs",
    "index.d.ts",
    "SECURITY.md",
    "locales/"
  ],
  "keywords": [
    "i18n",
    "l10n",
    "internationalization",
    "localization",
    "translation",
    "template",
    "rescript",
    "wasm",
    "deno",
    "polyglot"
  ],
  "directories": {
    "lib": "."
  },
  "dependencies": {
    "@messageformat/core": "^3.4.0",
    "debug": "^4.4.3",
    "fast-printf": "^1.6.10",
    "make-plural": "^7.4.0",
    "math-interval-parser": "^2.0.1",
    "mustache": "^4.2.0"
  },
  "devDependencies": {
    "async": "^3.2.6",
    "cookie-parser": "^1.4.7",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^8.10.2",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.5",
    "eslint-plugin-promise": "^6.6.0",
    "eslint-plugin-standard": "^5.0.0",
    "express": "^4.21.2",
    "husky": "^8.0.3",
    "lint-staged": "^12.5.0",
    "mocha": "^10.8.2",
    "nyc": "^15.1.0",
    "prettier": "^2.8.8",
    "should": "^13.2.3",
    "sinon": "^14.0.2",
    "yaml": "^2.8.1",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "test": "mocha --exit",
    "test-ci": "nyc mocha -- --exit",
    "coverage": "nyc report --reporter=lcov",
    "lint": "eslint i18n.js test/",
    "lint:fix": "eslint --fix i18n.js test/",
    "format": "prettier --write .",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hyperpolymath/polyglot-i18n/issues"
  }
}
